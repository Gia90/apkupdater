        <item name="android:textColorSecondary">#99FFFFFF</item>
        <item name="preferenceTheme">@style/PreferenceThemeOrange</item>
    </style>

    <style name="PreferenceThemeOrange" parent="AppThemeOrange">
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColorSecondary">#99000000</item>
        <item name="tabIndicatorColor">#FFFFFF</item>
    </style>

    <!-- Pink Theme -->
    <style name="AppThemePink" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">#dc64d0</item>
        <item name="colorPrimaryDark">#994691</item>
        <item name="colorAccent">#f7ff00</item>
        <item name="preferenceTheme">@style/AppThemePink</item>
    </style>

    <style name="PreferenceThemePink" parent="AppThemePink">
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#99FFFFFF</item>
        <item name="tabIndicatorColor">#FFFFFF</item>
