<resources>

    <!-- Blue Theme -->
    <style name="AppThemeBlue" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#0D47A1</item>
        <item name="colorPrimaryDark">#092b61</item>
        <item name="colorAccent">#6dabf7</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#99FFFFFF</item>
        <item name="preferenceTheme">@style/PreferenceThemeBlue</item>
    </style>

    <style name="PreferenceThemeBlue" parent="AppThemeBlue">
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:textColorSecondary">#99000000</item>
        <item name="tabIndicatorColor">#FFFFFF</item>
    </style>

    <!-- Orange Theme -->
    <style name="AppThemeOrange" parent="Theme.AppCompat.Light.NoActionBar">
